<ParticleSystem>
	<SpriteDamping>0.21</SpriteDamping>
	<SpriteLifetime>250</SpriteLifetime>
	<SpriteScale>50.0</SpriteScale>	
    <SpriteMass>50.0</SpriteMass>
    <ForceMultiplier>100.0</ForceMultiplier>
    <SpriteColour>255,255,255,255</SpriteColour>

    <SpriteInitialRotation>0</SpriteInitialRotation>
    <SpriteRotationDir>1</SpriteRotationDir> 			<!-- -1 or 1 for clockwise/anticlockwise....forgot which is which -->
    
    <SpriteSheetWidth>1</SpriteSheetWidth>   			<!-- e.g. is this a 1x1 2x2, 4x4 etc sprite sheet. Just list the width in terms of number of sprites along a side of the sheet -->
    <SpriteAnimationSpeed>0</SpriteAnimationSpeed>		<!-- s -->
	
	<PerlinNoise>true</PerlinNoise>						<!-- true or false, switches noise on/off -->
	<PerlinNoiseThreshold>0.1</PerlinNoiseThreshold>  	<!-- 0.0 to 1.0 if the particle force is less than this amount, perlin noise is not applied -->
	<PerlinNoiseAmount>0.5</PerlinNoiseAmount>		  	<!-- 0.0 to 1.0 how strong the perlin noise is applied, if above the threshold -->
	<ReturnToOrigin>true</ReturnToOrigin>				<!-- does the particle get sucked back into the centre upon dying? -->
	
	<TrailType>0</TrailType>  							<!-- 0 = none, 1 = line, 2 = tail, 3 = quad tail -->
    <TrailLength>30.0</TrailLength>
    <TrailStartColour>0,0,0,255</TrailStartColour>
    <TrailEndColour>0,0,0,0</TrailEndColour>
    <TrailWidth>6.0</TrailWidth>
    <TrailTaperWidth>true</TrailTaperWidth>
</ParticleSystem>
